@{
    ViewBag.Title = "Login form";
}

<h2>Login form</h2>
<form method="post" action=@Url.Action("Check","Home")>
    <p>
        <label>Id:</label><br />
        <input name="id" />
    </p>

    <p>
        <label>Password:</label><br />
        <input type="password" name="pass" />
    </p>
   
    <input type="submit" value="login" />

</form>
